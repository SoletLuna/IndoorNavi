<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="luh.uni.hannover.hci.indoornavi.NavTestActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_dialog_email" />

    <RadioGroup
        android:id="@+id/MethodGroup"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginBottom="300dp"
        android:orientation="vertical">


        <RadioButton
            android:id="@+id/ParticleFilter"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Particle" />

        <RadioButton
            android:id="@+id/AltParticleFilter"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Alternative Particle" />

        <RadioButton
            android:id="@+id/Step"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Step" />

        <RadioButton
            android:id="@+id/Checkpoint"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Checkpoint" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/StepGroup"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:layout_marginBottom="170dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/CheckWithSteps"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="With Steps" />

        <RadioButton
            android:id="@+id/CheckWithoutSteps"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Without Steps" />
        </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center"
        android:text="Text here"
        android:id="@+id/navTestText"/>

    <include layout="@layout/content_nav_test" />

</android.support.design.widget.CoordinatorLayout>
